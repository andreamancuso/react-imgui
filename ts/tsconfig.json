{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "lib": ["ES2022", "ScriptHost", "DOM"],
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "strict": true,
        "baseUrl": "./",
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "allowJs": true
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
}
