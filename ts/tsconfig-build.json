{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2022",
        "lib": ["ES2022", "ScriptHost", "DOM"],
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "baseUrl": "./",
        "outDir": "./build",
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "noEmit": false,
        "allowJs": true
    },
    "include": ["./src/lib", "./src/global.d.ts"],
    "exclude": ["node_modules"]
}
